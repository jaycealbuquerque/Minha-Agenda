<div class="container">
	
	<table class="table">
	  <thead>
	    <tr>
	      <th>Nome do tipo</th>
	      <th>Descrição do tipo</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @tipos.each do |tipo| %>
	      <tr>
	        <td><%= tipo.nome %></td>
	        <td><%= tipo.descricao %></td>
	        <td><%= link_to 'Editar',edit_tipo_path(tipo) %></td>
	        <td><%= link_to 'Deletar', tipo_path(tipo), method: :delete, data: { confirm: 'Deseja deletar?' } %></td>

        	     
	      </tr>
	    <% end %>
	  </tbody>
	</table>

	
	<%= link_to "Novo Tipo", new_tipo_path, class:"btn btn-primary" %>
			
		
</div>